{% endschema %}


<div class="master-collection-full">

	{% for block in section.blocks %}

        {% case block.type %}
        
            {% when 'kids-header' %}

            <div class="collection-header bike-header">

                <img data-src="{{ block.settings.header_image | img_url: 'master' }}" alt="{{ block.settings.header_image.alt }}" class="lazyload"/>

                <div class="hornit-kids-icon">
                    {{ 'hornit-kids-icon.svg' | asset_url | img_tag: 'Hornit Kids Logo' }}
                </div>

                <div class="collection-header-content kids-header-content airo-header-content">

                    {% if block.settings.logo_product_logo == 'hornit-airo' %}
                        <img data-src="{{ 'hornit-airo.svg' | asset_url }}" alt="Clug Logo" class="airo-product-logo lazyload"/>
                    {% endif %}


                    <h3 class="white uppercase kids-header-font">{{ block.settings.header_title }}</h3>

                    {% if block.settings.header_content != blank %}
                        <p class="white airo-desc">{{ block.settings.header_content }}</p>
                    {% endif %}

                    {% if block.settings.header_button_url != blank %}
                        <a href="{{ block.settings.header_button_url }}" class="block-button">
                            {% if block.settings.header_button_text != blank %}
                                {{ block.settings.header_button_text }}
                            {% else %}
                                {{ "general.shop.shop_now" | t }}
                            {% endif %}
                        </a>
                    {% endif %}

                </div>

            </div>

        {% when 'colour-section' %}

        {% if block.settings.cycle_color_one != blank %}

        <section class="colour-section">

            <div class="title-section ">


                <h2 class="kids-header-font uppercase">{{ block.settings.colour_section_title }}</h2>
            </div>
            <div class="colour-inner">

                <div class="colour-item">
                    <div class="colour-colour">
                    <div class="colour-circle" style='background-color: {{ block.settings.cycle_color_one }};'></div>
                    </div>
                    <div class="colour-content">
                        <h6 class="kids-header-font">{{ block.settings.colour_title_one }}</h6>
                        <p>{{ block.settings.colour_content_one }}</p>
                    </div>
                </div>

                {% if block.settings.cycle_color_two != blank %}
                <div class="colour-item">
                    <div class="colour-colour">
                    <div class="colour-circle" style='background-color: {{ block.settings.cycle_color_two }};'></div>
                    </div>
                    <div class="colour-content">
                        <h6 class="kids-header-font">{{ block.settings.colour_title_two }}</h6>
                        <p>{{ block.settings.colour_content_two }}</p>
                    </div>
                </div>

                {% endif %}

                {% if block.settings.cycle_color_three != blank %}
                <div class="colour-item">
                    <div class="colour-colour">
                    <div class="colour-circle" style='background-color: {{ block.settings.cycle_color_three }};'></div>
                    </div>
                    <div class="colour-content">
                        <h6 class="kids-header-font">{{ block.settings.colour_title_three }}</h6>
                        <p>{{ block.settings.colour_content_three }}</p>
                    </div>
                </div>

                {% endif %}

                {% if block.settings.cycle_color_four != blank %}
                <div class="colour-item">
                    <div class="colour-colour">
                    <div class="colour-circle" style='background-color: {{ block.settings.cycle_color_four }};'></div>
                    </div>
                    <div class="colour-content">
                        <h6 class="kids-header-font">{{ block.settings.colour_title_four }}</h6>
                        <p>{{ block.settings.colour_content_four }}</p>
                    </div>
                </div>

                {% endif %}
           
            </div>
        </section>

        {% endif %}


        {% when 'disclaimer' %}

        <section class="dislaimer-section">

            <div class="disclaimer-group">
                <div class="disclaimer-item">
                    
                    {% if block.settings.disclaimer_image_one != blank %}
                        <div class="disclaimer-image">
                            <img data-src="{{ block.settings.disclaimer_image_one | img_url: 'master' }}" alt="{{ block.settings.disclaimer_image_one.alt }}" class="lazyload"/>
                        </div>
                    {% endif %}
                 
                    {% if block.settings.disclaimer_title_one != blank %}
                        <div class="disclaimer-content">
                            <div class="disclaimer-inner">
                                <h4 class="uppercase kids-header-font ">{{ block.settings.disclaimer_title_one }}</h4>
                                <p>{{ block.settings.disclaimer_content_one }}</p>
                            </div>
                        </div>
                    {% endif %}

                </div>

                <div class="disclaimer-item">
                    
                    {% if block.settings.disclaimer_image_two != blank %}
                        <div class="disclaimer-image">
                            <img data-src="{{ block.settings.disclaimer_image_two | img_url: 'master' }}" alt="{{ block.settings.disclaimer_image_two.alt }}" class="lazyload"/>
                        </div>
                    {% endif %}
                 
                    {% if block.settings.disclaimer_title_two != blank %}
                        <div class="disclaimer-content">
                            <div class="disclaimer-inner">
                                <h4 class="uppercase kids-header-font ">{{ block.settings.disclaimer_title_two }}</h4>
                                <p>{{ block.settings.disclaimer_content_two }}</p>
                            </div>
                        </div>
                    {% endif %}

                    </div>

            </div>
        </section>





		{% when 'title' %}


			<div class="title-section">


				<h2 class="kids-header-font uppercase">{{ block.settings.title }}</h2>
				<p>{{ block.settings.hashtag }}</p>

				{% if block.settings.title_image != blank %}

					<div class="title-image">
