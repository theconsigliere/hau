<div class="extra-page" id="reset-password-page">
    <div class="page-header">
        <div class="inner">
            <h2 class="page-title ta-center yellow uppercase">{{ 'customer.reset_password.title' | t }}</h2>
            <h6 class="page-title ta-center white">{{ 'customer.reset_password.subtext' | t: email: email }}</h6>
        </div>
    </div>

    <section class="sales-enquiry">
        <div class="inner">
            <div class="contact-area">

                <div class="form">
                    {% form 'reset_customer_password' %}

                        {% for field in form.errors %}
                            {% if field == 'form' %}
                                <h6 class="red">{{ form.errors.messages[field] }}</h6>
                            {% else %}
                                <h6 class="red">{{ form.errors.translated_fields[field] }}
                                    -
                                    {{ form.errors.messages[field] }}</h6>
                            {% endif %}
                        {% endfor %}


                        <div class="main-contact-area">
                            <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                            <input type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">

                            <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                            <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}">

                            <input type="submit" class="block-button" value="{{ 'customer.reset_password.submit' | t }}">
                        </div>


                    {% endform %}
                </div>


            </div>

        </div>
    </section>
</div>
