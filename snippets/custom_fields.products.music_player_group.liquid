  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/hornit-dev.myshopify.com/products/configure/168239/edit
{% endcomment %}
{% if product.metafields.custom_fields["music_player_group"] != blank %}
  <div class="custom-field custom-field__music-player-group custom-field__type--field-collection">
    <h3 class="custom-field--title">Music Player Group</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign music_player_mp3_array = product.metafields.custom_fields["music_player_mp3"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["music_player_group"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__music-player-mp3">
            {{ music_player_mp3_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}