{% schema %}

{
    "name": "Title Section",
    "class": "page-title-section",
    "blocks": [
        {
            "type": "cyclist-title",
            "name": "Title Section",
            "settings": [
                {
                    "id": "cyclist_title",
                    "type": "text",
                    "label": "Section Title",
                    "placeholder": "Section Title"
                }, {
                    "id": "cyclist_hashtag",
                    "type": "text",
                    "label": "Hashtag Title",
                    "placeholder": "Hashtag Title"
                }, {
                    "id": "cyclist_contentdesc",
                    "type": "textarea",
                    "label": "Text Description",
                    "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
	                }, {
	                    "id": "button_url",
	                    "type": "url",
	                    "label": "Button URL"
	                }, {
	                    "id": "button_text",
	                    "type": "text",
	                    "label": "Button Text",
	                    "placeholder": "Shop Now",
	                    "info": "Defaults to \"Shop Now\""
	                }
	            ]
	        }
	    ],
	    "presets": [
	        {
	            "category": "content",
	            "name": "Display What Cyclist Are You? Section"
	        }
	    ]
	}

{% endschema %}

<section>

	{% for block in section.blocks %}

		<section class="cyclist-block-section cyclist-page-section">
			<div class="title-section">

				{% assign first_word = block.settings.cyclist_title | truncatewords: 2, '' %}

				{% assign rest_of_words = block.settings.cyclist_title | remove_first: first_word %}


				<h2 class="uppercase yellow stroke">{{ first_word }}</h2>
				<h2 class="uppercase yellow">{{ rest_of_words }}</h2>

				<h5 class="uppercase white">{{ block.settings.cyclist_hashtag }}</h5>

				<p class="white">{{ block.settings.cyclist_contentdesc }}</p>


				{% if block.settings.button_url != blank %}
					<a href="{{ block.settings.button_url }}" class="button">
						{% if block.settings.button_text != blank %}
							{{ block.settings.button_text }}
						{% else %}
							{{ "general.shop.shop_now" | t }}
						{% endif %}
					</a>
				{% endif %}
			</div>
		</section>
	{% endfor %}

</section>
