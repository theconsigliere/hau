						</a>
						<div class="clug-cat-text">

							{%- comment -%}Make first word bold{%- endcomment -%}
							{% assign first_word = block.settings.clug_cat_title_3 | truncatewords: 1, '' %}

							{% assign rest_of_words = block.settings.clug_cat_title_3  | remove_first: first_word %}

							<div class="clug-info-row">
								<div class="clug-info-item-text airo-item-text">
									<h4 class='kids-header-font'>
										{{ block.settings.clug_cat_title_3 }}</h4>


									<p class=''>{{ block.settings.clug_cat_desc_3 }}</p>
								</div>
